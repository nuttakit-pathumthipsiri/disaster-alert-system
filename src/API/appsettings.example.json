{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost,1433;Database=disaster_alert_db;User Id=sa;Password=YourPasswordHere;TrustServerCertificate=true;",
    "Redis": "localhost:6379"
  },
  "ExternalApis": {
    "OpenWeather": {
      "ApiKey": "your_openweather_api_key_here"
    },
    "USGS": {
      "BaseUrl": "https://earthquake.usgs.gov/fdsnws/event/1/"
    },
    "SendGrid": {
      "ApiKey": "your_sendgrid_api_key_here",
      "FromEmail": "your_email_here",
      "FromName": "Disaster Alert System"
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5000"
      }
    }
  }
